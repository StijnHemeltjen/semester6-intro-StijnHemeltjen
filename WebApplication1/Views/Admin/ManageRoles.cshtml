@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Rollen beheren";
}

<h2>Rollen beheren</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="CreateRole" method="post" class="mb-3">
    <div class="input-group">
        <input type="text" name="name" class="form-control" placeholder="Nieuwe rolnaam" required />
        <button type="submit" class="btn btn-primary">Toevoegen</button>
    </div>
</form>

<table class="table table-bordered">
    <tr>
        <th>Rolnaam</th>
        <th>Acties</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <a asp-action="DeleteRole" asp-route-name="@role.Name" class="btn btn-danger btn-sm" onclick="return confirm('Weet je zeker dat je deze rol wilt verwijderen?')">Verwijderen</a>
            </td>
        </tr>
    }
</table>
