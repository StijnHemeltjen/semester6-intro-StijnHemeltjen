@model EditUserViewModel
@{
    ViewData["Title"] = "Gebruiker bewerken";
}

<h2>Gebruiker bewerken</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Voornaam</label>
        <input asp-for="Voornaam" class="form-control" />
    </div>

    <div class="form-group">
        <label>Rollen</label>
        @foreach (var role in Model.Roles)
        {
            <div class="form-check">
                <input type="checkbox" asp-for="@role.IsSelected" class="form-check-input" />
                <label class="form-check-label">@role.Role</label>
                <input type="hidden" asp-for="@role.Role" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Opslaan</button>
</form>
