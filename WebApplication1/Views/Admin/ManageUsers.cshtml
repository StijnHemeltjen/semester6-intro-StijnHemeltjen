@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Gebruikers beheren";
}

<h2>Gebruikers beheren</h2>
<table class="table table-bordered">
    <tr>
        <th>Email</th>
        <th>Voornaam</th>
        <th>Acties</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Voornaam</td>
            <td>
                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Bewerken</a>
                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm" onclick="return confirm('Weet je zeker dat je deze gebruiker wilt verwijderen?')">Verwijderen</a>
            </td>
        </tr>
    }
</table>
